<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:WX.Converters"
             xmlns:loc="clr-namespace:WX.Resources.Locales"
             xmlns:controls="clr-namespace:WX.Views.Controls"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:m="clr-namespace:WX.Models.Weather"
             x:Class="WX.Views.Pages.DailyWeatherPage"
             x:Name="DWeatherPage"
             Style="{DynamicResource ContentPage}">
    <ContentPage.Resources>
        <converters:DateToWeekDayConverter x:Key="DateToWeekDayConverter"/>
        <converters:DateToStringDateConverter x:Key="DateToStringDateConverter"/>
        <converters:TemperatureAddUnitConverter x:Key="TemperatureAddUnitConverter"/>
        <converters:NumberToPercentsConverter x:Key="NumberToPercentsConverter"/>
        <converters:WindAddUnitsConverter x:Key="WindAddUnitsConverter"/>
        <converters:UVIndexToColorConverter x:Key="UVIndexToColorConverter"/>
        <converters:TimeToIsCurrentTimeConverter x:Key="TimeToIsCurrentTimeConverter"/>
        <converters:IsCurrentItemConverter x:Key="IsCurrentItemConverter"/>
        <converters:IsNotCurrentItemConverter x:Key="IsNotCurrentItemConverter"/>
        <converters:IsNamedLocationConverter x:Key="IsNamedLocationConverter"/>
        <converters:IsNotNamedLocationConverter x:Key="IsNotNamedLocationConverter"/>
        <converters:CountryCodeToFlagURLConverter x:Key="CountryCodeToFlagURLConverter"/>
        <converters:WICToIconConverter x:Key="WICToIconConverter"/>
        <converters:PrecipitationAddUnitsConverter x:Key="PrecipitationAddUnitsConverter"/>
    </ContentPage.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid BindingContext="{Binding CurrentDailyWeather}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid BindingContext="{Binding BindingContext.LocationWorker.SelectedLocation, Source={RelativeSource AncestorType={x:Type ContentPage}}}">
                    <HorizontalStackLayout IsVisible="{Binding ., Converter={StaticResource IsNamedLocationConverter}}">
                        <Image Source="{Binding CountryCode, Converter={StaticResource CountryCodeToFlagURLConverter}}"
                               WidthRequest="20"
                               HeightRequest="20"
                               VerticalOptions="Center"/>

                        <Label Margin="5,0,0,0"
                               VerticalOptions="Center"
                               Text="{Binding Name}"
                               FontSize="Header"
                               FontFamily="{DynamicResource FontBoldName}"/>
                    </HorizontalStackLayout>

                    <Label IsVisible="{Binding ., Converter={StaticResource IsNotNamedLocationConverter}}"
                           Text="{x:Static loc:Locale.CustomLocationLabel}"/>
                </Grid>

                    <Label Grid.Row="1"
                           FontSize="Large">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{Binding Time, Converter={StaticResource DateToWeekDayConverter}}"
                                      TextColor="{DynamicResource TextColor}"
                                      FontFamily="{DynamicResource FontBoldName}"/>
                                <Span Text=", "
                                      TextColor="{DynamicResource TextMutedColor}"
                                      FontFamily="{DynamicResource FontBoldName}"/>
                                <Span Text="{Binding Time, Converter={StaticResource DateToStringDateConverter}}"
                                      TextColor="{DynamicResource TextMutedColor}"
                                      FontFamily="{DynamicResource FontBoldName}"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                <controls:ControlButtonsPanel Grid.RowSpan="2"
                                              Grid.Column="1"
                                              HorizontalOptions="End"                                  
                                              VerticalOptions="Center"/>
            </Grid>

            <VerticalStackLayout Grid.Row="1"
                                 VerticalOptions="Center">
                <Image Style="{DynamicResource WeatherIconImage}"
                       Source="{Binding WeatherCode, Converter={StaticResource WICToIconConverter}}">
                    <Image.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="{Binding BindingContext.WeatherIconColor, Source={x:Reference DWeatherPage}}"/>
                    </Image.Behaviors>
                </Image>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <HorizontalStackLayout HorizontalOptions="End"
                                           VerticalOptions="End"
                                           Margin="0,0,10,7">
                        <Image Source="{mi:Material Icon=ArrowDownward, IconColor={StaticResource TextMutedColor}, IconSize=16}"/>
                        <Label Style="{DynamicResource PropertyHint}"
                               VerticalOptions="End"
                               Text="{Binding MinimumTemperature2m, Converter={StaticResource TemperatureAddUnitConverter}}"/>
                    </HorizontalStackLayout>
                    
                    <Label Grid.Column="1"
                           Style="{DynamicResource ActualTemperatureLabel}"
                           Text="{Binding MeanTemperature2m, Converter={StaticResource TemperatureAddUnitConverter}}"/>

                    <HorizontalStackLayout Grid.Column="2"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Start"
                                           Margin="10,7,0,0">
                        <Image Source="{mi:Material Icon=ArrowUpward, IconColor={StaticResource TextMutedColor}, IconSize=16}"/>
                        <Label Style="{DynamicResource PropertyHint}"
                               VerticalOptions="End"
                               Text="{Binding MaximumTemperature2m, Converter={StaticResource TemperatureAddUnitConverter}}"/>
                    </HorizontalStackLayout>
                </Grid>

                <Label FontSize="Subtitle"
                       HorizontalTextAlignment="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{x:Static loc:Locale.MeanApparentTemperatureLabel}"
                                  FontFamily="{DynamicResource FontLightName}"
                                  TextColor="{DynamicResource TextMutedColor}"/>
                            <Span Text=" "/>
                            <Span Text="{Binding MeanApparentTemperature2m, Converter={StaticResource TemperatureAddUnitConverter}}"
                                  FontFamily="{DynamicResource FontLightName}"
                                  TextColor="{DynamicResource TextMutedColor}"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </VerticalStackLayout>

            <BoxView Grid.Row="2"
                     Style="{DynamicResource UpWeatherPageSeparator}"/>

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="0.25*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <VerticalStackLayout HorizontalOptions="Center">
                    <Image Style="{DynamicResource PropertyIcon}"
                           Source="{mi:Material Icon=WbTwilight, IconColor={StaticResource TextColor}}"/>
                    <Label Style="{DynamicResource PropertyHint}"
                           Margin="0,5,0,0"
                           HorizontalOptions="Center"
                           Text="{Binding Sunrise}"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1"
                                     HorizontalOptions="Center">
                    <Image Style="{DynamicResource PropertyIcon}"
                           Rotation="180"
                           Source="{mi:Material Icon=WbTwilight, IconColor={StaticResource TextColor}}"/>
                    <Label Style="{DynamicResource PropertyHint}"
                           Margin="0,5,0,0"
                           HorizontalOptions="Center"
                           Text="{Binding Sunset}"/>
                </VerticalStackLayout>

                <Label Grid.ColumnSpan="2"
                       Grid.Row="1"
                       Margin="0,5,0,0"
                       HorizontalOptions="Center"
                       Style="{DynamicResource PropertyHint}"
                       Text="{Binding DaylightDuration}"/>

                <Grid Grid.Column="2"
                      Grid.RowSpan="2"
                      HorizontalOptions="Center"
                      VerticalOptions="Center">
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding BindingContext.MoreAboutUVCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"/>
                    </Grid.GestureRecognizers>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <BoxView WidthRequest="32"
                             HeightRequest="32"
                             BackgroundColor="{Binding UVIndex, Converter={StaticResource UVIndexToColorConverter}}"
                             CornerRadius="16"/>

                    <Label TextColor="{DynamicResource BackgroundColor}"
                           Text="{Binding UVIndex}"
                           FontSize="20"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>
                </Grid>

                <VerticalStackLayout Grid.Column="3"
                                     Grid.RowSpan="2"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Center">
                    <Label Style="{DynamicResource PropertyHint}"
                           HorizontalOptions="Center"
                           FontSize="Caption">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{Binding PrecipitationHours}"/>
                                <Span Text=" "/>
                                <Span Text="{x:Static loc:Locale.h}"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label Style="{DynamicResource PropertyTitle}"
                           HorizontalOptions="Center"
                           Text="{Binding PrecipitationSum, Converter={StaticResource PrecipitationAddUnitsConverter}}"/>

                    <Label Style="{DynamicResource PropertyHint}"
                           Margin="0,5,0,0"
                           Text="{x:Static loc:Locale.PrecipitationLabel}"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Grid>

            <BoxView Grid.Row="4"
                     Style="{DynamicResource DownWeatherPageSeparator}"/>

            <Button Grid.Row="5"
                    Style="{DynamicResource TransparentButton}"
                    Margin="15"
                    ImageSource="{mi:Material Icon=KeyboardArrowDown, IconColor={StaticResource TextMutedColor}}"
                    Text="{x:Static loc:Locale.MoreButton}"
                    Command="{Binding BindingContext.OpenDetailsCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Style="{DynamicResource ActionButton}"
                    ImageSource="{mi:Material Icon=ArrowBack, IconColor={StaticResource TextMutedColor}}"
                    Command="{Binding MoveBackwardCommand}"/>

            <CarouselView Grid.Column="1"
                          x:Name="DailyWeatherPicker"
                          ItemsSource="{Binding Data}"
                          CurrentItem="{Binding CurrentDailyWeather, Mode=TwoWay}"
                          PeekAreaInsets="{Binding Path=Width, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                          Loop="False"
                          HorizontalScrollBarVisibility="Never">
                <CarouselView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal"
                                       ItemSpacing="20"/>
                </CarouselView.ItemsLayout>

                <CarouselView.ItemTemplate>
                    <DataTemplate x:DataType="m:DailyWeather">
                        <Grid VerticalOptions="End">
                            <VerticalStackLayout HorizontalOptions="Center">
                                <Label Text="{x:Static loc:Locale.NowLabel}"
                                       TextColor="{DynamicResource TextMutedColor}"
                                       FontSize="Caption"
                                       FontFamily="{DynamicResource FontLightName}"
                                       HorizontalOptions="Center"
                                       IsVisible="{Binding Time, Converter={StaticResource TimeToIsCurrentTimeConverter}}"/>
                                <Label Text="{Binding MeanTemperature2m, Converter={StaticResource TemperatureAddUnitConverter}}"
                                       TextColor="{DynamicResource TextColor}"
                                       FontSize="Title"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"/>
                                <Label Text="{Binding Time, StringFormat='{0:M}'}"
                                       HorizontalOptions="Center"
                                       TextColor="{DynamicResource TextMutedColor}"/>
                            </VerticalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>

            <Button Grid.Column="2"
                    Style="{DynamicResource ActionButton}"
                    ImageSource="{mi:Material Icon=ArrowForward, IconColor={StaticResource TextMutedColor}}"
                    Command="{Binding MoveForwardCommand}"/>
        </Grid>
    </Grid>
</ContentPage>