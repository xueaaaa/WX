<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:Class="WX.Views.Controls.ExtendedIcon"
             x:Name="extIcon">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Image Source="{mi:Material Icon={Binding Source={x:Reference extIcon}, Path=Primary},
            IconColor={StaticResource TextColor}}"/>
        <Image Source="{mi:Material Icon={Binding Source={x:Reference extIcon}, Path=Secondary},
            IconColor={StaticResource TextColor}}"
               WidthRequest="14"
               HeightRequest="14"
               Grid.Column="1"
               Margin="{Binding Source={x:Reference extIcon}, Path=SecondaryMargin}"
               HorizontalOptions="Start"
               VerticalOptions="End"/>
    </Grid>
</ContentView>
