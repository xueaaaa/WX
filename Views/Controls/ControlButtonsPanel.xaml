<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:Class="WX.Views.Controls.ControlButtonsPanel">
    <HorizontalStackLayout>
        <Button x:Name="SelectLocationButton"
                Style="{DynamicResource ActionButton}"
                ImageSource="{mi:Material Icon=LocationPin, IconColor={StaticResource TextColor}}"
                Padding="2"
                Clicked="SelectLocationButton_Clicked"/>

        <Button x:Name="OpenSettingsButton"
                Style="{DynamicResource ActionButton}"
                ImageSource="{mi:Material Icon=Settings, IconColor={StaticResource TextColor}}"
                Margin="5,0,0,0"/>
    </HorizontalStackLayout>
</ContentView>
