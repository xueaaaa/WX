<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:Class="WX.Views.Controls.ControlButtonsPanel">
    <HorizontalStackLayout>
        <Button Style="{DynamicResource TransparentButton}"
                ImageSource="{mi:Material Icon=LocationPin, IconColor={StaticResource TextColor}}"
                Padding="2"/>

        <Button Style="{DynamicResource TransparentButton}"
                ImageSource="{mi:Material Icon=Settings, IconColor={StaticResource TextColor}}"
                Margin="5,0,0,0"
                Padding="2"/>
    </HorizontalStackLayout>
</ContentView>
